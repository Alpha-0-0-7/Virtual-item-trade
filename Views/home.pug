block CSS
    link(rel='stylesheet' href='/CSS/home.css')
block JS
    script(src='/JS/home.js' defer='')
block content
    .body
        -if(user)
            a.game-anchor(href="/ownedGames")
                button.button.btn.btn-lg(type='button') View Your Games Library
            a.inv-anchor(href="/userInventory")
                button.button.btn.btn-lg(type='button') View Your Inventory
        a.trade-anchor(href="/tradeCenter")
            button.button.btn.btn-lg(type='button') Trade Center